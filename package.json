{
	"name": "xtemplate-block",
	"displayName": "Xtemplate Block",
	"description": "Enhances Xtemplate markup files with features like parsing <!-- BEGIN: name --> & <!-- END: name --> into language symbols, adding folding ranges, and providing hover-to-get-path functionality for an improved development experience.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.98.0"
	},
	"categories": [
		"Programming Languages",
		"Linters",
		"Other"
	],
	"main": "./dist/extension.js",
	"icon": "./media/icon.png",
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.98.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^8.25.0",
		"@typescript-eslint/parser": "^8.25.0",
		"eslint": "^9.21.0",
		"typescript": "^5.7.3",
		"ts-loader": "^9.5.2",
		"webpack": "^5.98.0",
		"webpack-cli": "^6.0.1",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1"
	}
}
